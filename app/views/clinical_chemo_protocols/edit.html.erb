<% form_for(@abstract,:url => abstract_clinical_chemo_protocol_path(@abstract)) do |f| %>

<%= f.wrapped_y_n_dk_select(:chemo_protocol_report_found,
	:label_text => "Found?:") %>
<%= f.wrapped_y_n_dk_select(:patient_on_chemo_protocol,
	:label_text => "Was patient put on a COG/POG/CCG Protocol?:") %>
<%= f.wrapped_text_field(:chemo_protocol_name,
	:label_text => "If yes, indicate protocol used:") %>
<span>(e.g. COG XXXX, POG XXXX, CCG XXXX)</span>
<p>If no, specify any therapeutic agents (expecially the first 3-4 induction agents) and if the patients was 'treated per _______'</p>
<%= f.wrapped_text_area(:chemo_protocol_agent_description,
	:class => 'autosize',
	:label_text => "&nbsp;" ) %>

<p>
<%= button_link_to "Cancel", :action => 'show' %>&nbsp;
<%= f.submit 'Save Changes',:name => nil %>
</p>
<% end %>
