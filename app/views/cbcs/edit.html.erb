<% form_for(@abstract,:url => abstract_cbc_path(@abstract)) do |f| %>

<%= f.wrapped_y_n_dk_select(:cbc_report_found,
	:include_blank => true,
	:label_text => "Found" ) %>
<%= f.wrapped_date_text_field(:cbc_report_on) %>
<%= f.wrapped_text_field(:cbc_white_blood_count) %><span>K/mm3</span>

<%= f.wrapped_text_field(:cbc_percent_blasts) %><span>%</span>
<h4>OR</h4>
<%= f.wrapped_text_field(:cbc_number_blasts) %>

<%= f.wrapped_text_field(:cbc_hemoglobin_level) %><span>GM/DL</span>
<%= f.wrapped_text_field(:cbc_platelet_count) %><span>K/mm3</span>

<p>
<%= button_link_to "Cancel", :action => 'show' %>&nbsp;
<%= f.submit 'Save Changes',:name => nil %>
</p>
<% end %>
