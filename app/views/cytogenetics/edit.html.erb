<% form_for(@abstract,:url => abstract_cytogenetic_path(@abstract)) do |f| %>

<%= f.wrapped_y_n_dk_select(:cytogen_report_found,
	:label_text => "Found?",
	:include_blank => true ) %>
<%= f.wrapped_date_text_field(:cytogen_report_on,
	:label_text => "Date") %>

<%= f.wrapped_y_n_dk_select(:cytogen_karyotype_done,
	:include_blank => true,
	:label_text => "Conventional Karyotype done?" ) %>
<%= f.wrapped_y_n_dk_select(:cytogen_hospital_fish_done,
	:include_blank => true,
	:label_text => "Hospital FISH done?" ) %>
<%= f.wrapped_y_n_dk_select(:cytogen_ucb_fish_done,
	:include_blank => true,
	:label_text => "UCB Fish done?" ) %>

<%= f.wrapped_text_area(:conventional_karyotype_results,
	:label_text => "Conventional Karyotype Results:") %>
<%= f.wrapped_text_area(:hospital_fish_results,
	:label_text => "FISH Results:" ) %>
<%= f.wrapped_text_area(:ucb_fish_results,
	:label_text => "UCB FISH Results:" ) %>
<%= f.wrapped_text_area(:cytogen_comment,
	:label_text => "Comments:" ) %>
<%= f.wrapped_y_n_dk_select(:cytogen_is_hyperdiploidy,
	:include_blank => true ,
	:label_text => "Hyperdiploidy found?" ) %>
<%= f.wrapped_text_field(:cytogen_chromosome_number,
	:label_text => "How many?" ) %>

<hr/>
<div class='columns small'>
<div class='column'>
<%= f.wrapped_text_field(:cytogen_t1221,
	:label_text => "t(12;21)" ) %>
<%= f.wrapped_text_field(:cytogen_inv16,
	:label_text => "inv(16)" ) %>
<%= f.wrapped_text_field(:cytogen_t119,
	:label_text => "t(1;19)" ) %>
</div><!-- class='column' -->
<div class='column'>
<%= f.wrapped_text_field(:cytogen_t821,
	:label_text => "t(8;21)" ) %>
<%= f.wrapped_text_field(:cytogen_t922,
	:label_text => "t(9;22)" ) %>
<%= f.wrapped_text_field(:cytogen_t1517,
	:label_text => "t(15;17)" ) %>
</div><!-- class='column' -->
<div class='column'>
<%= f.wrapped_y_n_dk_select(:cytogen_trisomy4,
	:include_blank => true ,
	:label_text => "Trisomy 4" ) %>
<%= f.wrapped_y_n_dk_select(:cytogen_trisomy5,
	:include_blank => true ,
	:label_text => "Trisomy 5" ) %>
<%= f.wrapped_y_n_dk_select(:cytogen_trisomy10,
	:include_blank => true ,
	:label_text => "Trisomy 10" ) %>
</div><!-- class='column' -->
<div class='column'>
<%= f.wrapped_y_n_dk_select(:cytogen_trisomy17,
	:include_blank => true ,
	:label_text => "Trisomy 17" ) %>
<%= f.wrapped_y_n_dk_select(:cytogen_trisomy21,
	:include_blank => true ,
	:label_text => "Trisomy 21" ) %>
</div><!-- class='column' -->
</div><!-- class='columns' -->

<hr/>

<div class='columns'>
<div class='column'>
<%= f.wrapped_text_field(:cytogen_other_trans_1,
	:label_text => "Other 1:" ) %>
<%= f.wrapped_text_field(:cytogen_other_trans_2,
	:label_text => "Other 2:" ) %>
<%= f.wrapped_text_field(:cytogen_other_trans_3,
	:label_text => "Other 3:" ) %>
<%= f.wrapped_text_field(:cytogen_other_trans_4,
	:label_text => "Other 4:" ) %>
<%= f.wrapped_text_field(:cytogen_other_trans_5,
	:label_text => "Other 5:" ) %>
</div><!-- class='column' -->
</div><!-- class='columns' -->

<p>
<%= button_link_to "Cancel", :action => 'show' %>&nbsp;
<%= f.submit 'Save Changes',:name => nil %>
</p>
<% end %>
