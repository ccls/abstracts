<% content_tag_for :tr, abstract, :class => 'row' do %>
<td class='id'>
	<%= link_to abstract.id, abstract_path(abstract) %>
</td>
<td class='subject'>
<%= abstract.subject.try(:patid) || '&nbsp;' %>
</td>
<td class='entry_1'>
<%= abstract.try(:entry_1_by) || '&nbsp;' %>
</td>
<td class='entry_2'>
<%= abstract.try(:entry_2_by) || '&nbsp;' %>
</td>
<td class='merged'>
<%= abstract.try(:merged_by) || '&nbsp;' %>
</td>
<td class='manage'>
	<%= button_link_to "Show", abstract_path(abstract) %>&nbsp;
	<%= button_link_to 'Edit', edit_abstract_path(abstract) %>&nbsp;
	<% destroy_link_to 'Destroy', abstract_path(abstract) do %>
		<%= hidden_field_tag 'confirm', "Destroy abstract '#{abstract.id}'?", :id => nil %>
	<% end %>
</td>
<% end %>
