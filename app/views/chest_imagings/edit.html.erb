<% form_for(@abstract,:url => abstract_chest_imaging_path(@abstract)) do |f| %>

<fieldset><legend><%= @page_title %></legend>

<%= f.wrapped_y_n_dk_select(:chest_imaging_report_found,
	:label_text => "Found?") %>
<%= f.wrapped_date_text_field(:chest_imaging_report_on,
	:label_text => "Date" ) %>
<%= f.wrapped_y_n_dk_select(:mediastinal_mass_present,
	:label_text => "Mediastinal mass") %>
<%= f.wrapped_text_area(:chest_imaging_comment,
	:class => 'autosize',
	:label_text => "Comments:") %>

</fieldset>

<p>
<%= button_link_to "Cancel", :action => 'show' %>&nbsp;
<%= f.submit 'Save Changes',:name => nil %>
</p>
<% end %>
