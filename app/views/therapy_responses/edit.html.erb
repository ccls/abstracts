<% form_for(@abstract,:url => abstract_therapy_response_path(@abstract)) do |f| %>

<%= f.wrapped_text_field(:response_fab_subtype) %>

<p>Notes: Test dates may not correspond exactly to days 7, 14, &amp; 28.  Please note the dates of each biopsy.  Check the calculated field to see exact number days betwen diagnosis and test.</p>

<h4>Day 7: Bone Marrow Biopsy/Aspirate</h4>
<%= f.wrapped_y_n_dk_select(:response_report_found_day_7,
	:include_blank => true ) %>
<%= f.wrapped_date_text_field(:response_report_on_day_7) %>
<%= f.wrapped_text_field(:response_is_inconclusive_day_7) %>
<%= f.wrapped_text_field(:response_blasts_day_7) %>
<%= f.wrapped_text_field(:response_classification_day_7) %>
<%= f.wrapped_text_field(:response_blasts_units_day_7) %>

<h4>Day 14: Bone Marrow Biopsy/Aspirate</h4>
<%= f.wrapped_y_n_dk_select(:response_report_found_day_14,
	:include_blank => true ) %>
<%= f.wrapped_date_text_field(:response_report_on_day_14) %>
<%= f.wrapped_text_field(:response_is_inconclusive_day_14) %>
<%= f.wrapped_text_field(:response_blasts_day_14) %>
<%= f.wrapped_text_field(:response_classification_day_14) %>
<%= f.wrapped_text_field(:response_blasts_units_day_14) %>

<h4>Day 28: Bone Marrow Biopsy/Aspirate</h4>
<%= f.wrapped_y_n_dk_select(:response_report_found_day_28,
	:include_blank => true ) %>
<%= f.wrapped_date_text_field(:response_report_on_day_28) %>
<%= f.wrapped_text_field(:response_is_inconclusive_day_28) %>
<%= f.wrapped_text_field(:response_blasts_day_28) %>
<%= f.wrapped_text_field(:response_classification_day_28) %>
<%= f.wrapped_text_field(:response_blasts_units_day_28) %>

<%= f.wrapped_y_n_dk_select(:response_day30_is_in_remission,
	:include_blank => true ) %>

<p>* If no diagnosis date is entered, count will remain 0</p>

<p>
<%= button_link_to "Cancel", :action => 'show' %>&nbsp;
<%= f.submit 'Save Changes',:name => nil %>
</p>
<% end %>
