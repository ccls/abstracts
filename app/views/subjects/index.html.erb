<% if @subjects.length > 0 %>
<table id='subjects'><thead><tr>
<th><%= sort_link('PatID') -%></th>
<th><%= sort_link('Abstracts_Count') -%></th>
</tr></thead><tbody>
<%= render :partial => 'subject', :collection => @subjects %>
</tbody></table>
<% else %>
<p>There are no subjects.</p>
<% end %>

<%= will_paginate @subjects %>

<% form_tag( subjects_path, :method => :get) do %>
	<%= hidden_field_tag :abstracts_count, params[:abstracts_count], :id => nil  %>
	<%= label_tag :q, "Simple Simon's Simple Subject Search" %>
	<%= text_field_tag :q, params[:q], :id => nil  %>
	<%= submit_tag 'find', :name => nil %>
<% end %>
